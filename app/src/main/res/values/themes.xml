<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ExhibitAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_50</item>
        <item name="colorSecondaryVariant">@color/white_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_700</item>
    </style>

    <style name="Theme.ExhibitAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ExhibitAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExhibitAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>